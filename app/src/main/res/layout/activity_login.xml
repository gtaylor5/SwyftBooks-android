<?xml version="1.0" encoding="utf-8"?>


        <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.swyftlabs.swyftbooks.LoginActivity"
            android:id="@+id/mai"
            android:background="@drawable/swyftbooksackground">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="425dp"
                android:text="SwyftBooks"
                android:id="@+id/AppNameTextView"
                android:textColor="#ffffffff"
                android:textSize="50sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="false"
                android:gravity="center_vertical|center_horizontal"
                android:layout_above="@+id/EmailEditText"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:visibility="visible" />

            <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/EmailEditText"
                        android:inputType="textEmailAddress"
                        android:hint="Email@myEmail.com"
                        android:textColorHint="#ffffffff"
                        android:textColor="#ffffff"
                        android:elegantTextHeight="false"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/customedittext"
                        android:textIsSelectable="false"
                        android:paddingLeft="12dp"
                        android:layout_marginBottom="10dp"
                        android:layout_above="@+id/PasswordEditText"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                android:textSize="15sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/PasswordEditText"
                        android:hint="Password"
                        android:textColorHint="#ffffffff"
                        android:textColor="#ffffff"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/customedittext"
                        android:paddingLeft="12dp"
                        android:layout_above="@+id/forgotPassword"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="7.5dp"
                        android:layout_alignParentStart="true"
                        android:textSize="15sp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Log In"
                        android:id="@+id/LogInButton"
                        android:background="@drawable/customloginbutton"
                        android:onClick="onClick"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="65dp"
                        android:layout_alignParentStart="true"
                        android:textColor="#ffffffff"
                        android:layout_alignParentBottom="true"
                        android:layout_above="@+id/SignUpTextView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create Account"
                        android:id="@+id/SignUpTextView"
                        android:clickable="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="16sp"
                        android:textColor="#ffffffff"
                        android:onClick="goToSignUp"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp" />

            <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Continue as Guest"
                        android:id="@+id/skipTextView"
                        android:clickable="true"
                        android:textColor="#ffffffff"
                        android:onClick="skip"
                android:textSize="16sp"
                android:layout_alignTop="@+id/SignUpTextView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Forgot Password"
        android:id="@+id/forgotPassword"
        android:clickable="true"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        android:onClick="getPassword"
        android:nestedScrollingEnabled="false"
        android:layout_above="@+id/LogInButton"
        android:layout_marginBottom="7.5dp"
        android:layout_centerHorizontal="true"
        android:contextClickable="true" />

</RelativeLayout>
